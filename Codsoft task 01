def simple_chatbot(user_input):
    # Convert user input to lowercase for case insensitivity
    user_input = user_input.lower()

    # Define some predefined rules and responses
    if 'hello' in user_input or 'hi' in user_input:
        return "Hello! How can I assist you today?"

    elif 'goodbye' in user_input or 'bye' in user_input:
        return "Goodbye! Have a great day!"

    elif 'how are you' in user_input:
        return "I'm just a bot, but thanks for asking!"

    elif 'your name' in user_input:
        return "I'm a chatbot. You can call me ChatGPT."

    else:
        return "I'm sorry, I don't understand. Can you please rephrase?"

# Example usage:
print(simple_chatbot("Hello"))
print(simple_chatbot("What's your name?"))
print(simple_chatbot("How are you doing today?"))
print(simple_chatbot("Can you help me with something?"))
print(simple_chatbot("Goodbye!"))
